<view class="app"><block wx:if="{{goodsList.length<1}}"><view class="data-empty"><view class="view1"><image src="/static/emptyCart.jpg" mode="aspectFill"></image></view><view class="view2"><text style="font-size:26rpx;color:#C0C4CC;">空空如也</text><text data-event-opts="{{[['tap',[['goLogin',['$event']]]]]}}" style="font-size:26rpx;color:#fa436a;" bindtap="__e">去登陆></text></view></view></block><block wx:if="{{goodsList.length>0}}"><view class="shopping-cart"><view class="goods-box"><block wx:for="{{goodsList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="goods-item"><view data-event-opts="{{[['tap',[['handleCheckbox',[index,'$0','$1'],[[['goodsList','',index,'checkboxState']],[['goodsList','',index,'price']]]]]]]}}" class="{{['yticon icon-xuanzhong2 checkbox',(item.checkboxState)?'checkbox-activate':'']}}" bindtap="__e"></view><view data-event-opts="{{[['tap',[['handleDelete',[index]]]]]}}" class="del-btn yticon icon-fork delete" bindtap="__e"></view><view class="img"><image src="{{item.img}}" mode="aspectFill"></image></view><view class="content"><text class="text-font text-color text-overflow">{{item.title}}</text><text class="text-font" style="color:#909399;margin:4rpx 0;">{{item.goodsType}}</text><text class="text-font text-color">{{"￥"+item.price}}</text><view class="content-num"><text data-event-opts="{{[['tap',[['handleExid',['-','$0',index],[[['goodsList','',index,'num']]]]]]]}}" class="{{['minus',(!exidState)?'exid-activate':'']}}" bindtap="__e">-</text><text class="num">{{item.num}}</text><text data-event-opts="{{[['tap',[['handleExid',['+','$0',index],[[['goodsList','',index,'num']]]]]]]}}" class="{{['plus-sign',(exidState)?'exid-activate':'']}}" bindtap="__e">+</text></view></view></view></block></view><view class="{{['balance',someState?'isActive':'isActive2']}}"><view class="jiesuan"><view class="jiesuan-box"><view data-event-opts="{{[['tap',[['handleCheckboxB',['$event']]]]]}}" class="{{['yticon icon-xuanzhong2 checkbox',(checkboxStateBox)?'checkbox-activate':'']}}" bindtap="__e"></view><view data-event-opts="{{[['tap',[['handleEmpty',['$event']]]]]}}" class="{{['clear',(checkboxStateBox)?'clear-activate':'']}}" bindtap="__e">清空</view></view></view><view class="price"><text class="text-font flex-end" style="color:#303133;">{{"￥"+(totalMoney||0)}}</text><text class="text-font flex-end" style="color:#909399;font-size:26rpx;">已优惠74.35元</text></view><view class="go-balance"><view class="go-balance-box">去结算</view></view></view></view></block></view>