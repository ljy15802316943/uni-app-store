.message-list {
  width: 100%;
  height: auto;
  padding-bottom: 0.8rem;
  box-sizing: border-box;
}
.message-list .message-box {
  width: 100%;
  height: auto;
  padding: 0rem 0.5rem;
  box-sizing: border-box;
}
.message-list .message-box .message-text {
  width: 100%;
  height: 2.3rem;
  font-size: 26rpx;
  color: #7d7d7d;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.message-list .message-box .message-content {
  width: 100%;
  height: auto;
  padding: 0rem 0.5rem;
  box-sizing: border-box;
  background-color: #FFFFFF;
}
