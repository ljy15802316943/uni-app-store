.shopping-cart {
  width: 100%;
  height: 5rem;
  padding: 1rem;
  box-sizing: border-box;
  position: fixed;
  bottom: 0rpx;
}
.shopping-cart .shopping-box {
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.5);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.shopping-cart .shopping-box .collection {
  color: #606266;
}
.shopping-cart .shopping-box .isActive {
  color: #fa436a;
}
.shopping-cart .shopping-box .isActive text {
  color: #fa436a !important;
}
